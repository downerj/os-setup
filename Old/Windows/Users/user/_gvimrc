" See .vimrc for color scheme info.

function! SetColorSchemeForGnome()
  let color_scheme = system('gsettings
        \ get org.gnome.desktop.interface color-scheme')
  if color_scheme =~ 'prefer-light' || color_scheme =~ 'default'
    colorscheme default
  else
    colorscheme torte
  endif
endfunction

function! SetColorSchemeForWindows()
  let color_scheme = system('powershell
        \ Get-ItemPropertyValue
        \ -Path \"HKCU:\\Software\\Microsoft\\Windows\\CurrentVersion\\Themes\\Personalize\"
        \ -Name AppsUseLightTheme')
  if color_scheme == 1
    colorscheme default
    set background=light
  else
    colorscheme torte
    set background=dark
  endif
endfunction

" Enable the following if running GVim.
if has('gui_running')
  " GUI initial dimensions.
  set lines=12 columns=100

  " GUI font.
  "set guifont=Fantasque_Sans_Mono:h12:cANSI:qDRAFT
  set guifont=Terminal:h9:cOEM:qDRAFT

  " Set the cursor.
  highlight Cursor gui=reverse guifg=NONE guibg=NONE
  set guicursor=a:block-Cursor

  " Disable menubar.
  set guioptions-=m
  " Disable toolbar.
  set guioptions-=T
  " Disable scrollbars.
  set guioptions-=r
  set guioptions-=b

  "call SetColorSchemeForGnome()
  call SetColorSchemeForWindows()
endif

